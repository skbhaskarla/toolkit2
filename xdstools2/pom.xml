<build>
    <outputDirectory>${webappDirectory}/WEB-INF/classes</outputDirectory>

        <plugins>
	    <!--<plugin>-->
                <!--<groupId>org.apache.maven.plugins</groupId>-->
                <!--<artifactId>maven-source-plugin</artifactId>-->
                <!--<version>${maven-source-plugin.version}</version>-->
                <!--<executions>-->
