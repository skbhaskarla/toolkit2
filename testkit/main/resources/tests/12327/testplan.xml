              <tag0:ValueList>
                <tag0:Value>'$uniqueid$'</tag0:Value>
              </tag0:ValueList>
            </tag0:Slot>
          </tag0:AdhocQuery>
        </query:AdhocQueryRequest>
      </Metadata>
      <UseId id="Folder" symbol="$uniqueid$" step="submit_doc_w_fol" section="AssignedUids"/>
      <ExpectedContents>
        <SubmissionSets count="0"/>
        <Associations count="2"/>
        <Documents count="2"/>
        <Folders count="1"/>
      </ExpectedContents>
    </StoredQueryTransaction>
  </TestStep>
</TestPlan>
