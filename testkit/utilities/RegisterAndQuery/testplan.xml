<?xml version="1.0" encoding="UTF-8"?>
<TestPlan>
   <Test>RegisterAndQuery</Test>
    <TestStep id="register">
   		<Goal>Send a single DocumentEntry to a Registry</Goal>
        <ExpectedStatus>Success</ExpectedStatus>
        <RegisterTransaction>
            <NoPatientId/>
            <XDSb/>
            <MetadataFile>metadata.xml</MetadataFile>
        </RegisterTransaction>
    </TestStep>
    <TestStep id="query">
    	<Goal>Send GetSubmissionSetAndContents query</Goal>
    	<Goal>   Verify SubmissionSet, DocumentEntry, and HasMember Assocation returned</Goal>
    	<Goal>   Verify the above parts are properly connected</Goal>
        <ExpectedStatus>Success</ExpectedStatus>
        <!--  GetSubmissionSetAndContents -->
        <StoredQueryTransaction>
            <XDSb/>
            <UseId  id="SubmissionSet01" step="register"
                section="AssignedUids" symbol="$ssuid$"/>
            <Metadata>
                <query:AdhocQueryRequest xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xmlns:query="urn:oasis:names:tc:ebxml-regrep:xsd:query:3.0"
                    xmlns="urn:oasis:names:tc:ebxml-regrep:xsd:rim:3.0"
                    xmlns:rs="urn:oasis:names:tc:ebxml-regrep:xsd:rs:3.0">
                    <query:ResponseOption returnComposedObjects="true" returnType="LeafClass"/>
                    <AdhocQuery id="urn:uuid:e8e3cb2c-e39c-46b9-99e4-c12f57260b83">
                        <Slot name="$XDSSubmissionSetUniqueId">
                            <ValueList>
                                <Value>'$ssuid$'</Value>
                            </ValueList>
                        </Slot>
                    </AdhocQuery>
                </query:AdhocQueryRequest>
            </Metadata>
            <ExpectedContents>
                <SSwithOneDoc/>
            </ExpectedContents>
			<Report name="docid" section="Result">
//*[local-name()='ExtrinsicObject']/@id
			</Report>
        </StoredQueryTransaction>
    </TestStep>
    <TestStep id="GetDocumentsByUUID">
    	<Goal>Send GetDocuments query</Goal>
    	<Goal>   Verify single DocumentEntry returned</Goal>
        <ExpectedStatus>Success</ExpectedStatus>
        <StoredQueryTransaction>
            <XDSb/>
            <CleanParams/>
			<UseReport section="THIS" step="query" reportName="docid" useAs="$id0$"/>
            <Metadata>
                <query:AdhocQueryRequest xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xmlns:query="urn:oasis:names:tc:ebxml-regrep:xsd:query:3.0"
                    xmlns="urn:oasis:names:tc:ebxml-regrep:xsd:rim:3.0"
                    xmlns:rs="urn:oasis:names:tc:ebxml-regrep:xsd:rs:3.0">
                    <query:ResponseOption returnComposedObjects="true" returnType="LeafClass"/>
                    <AdhocQuery id="urn:uuid:5c4f972b-d56b-40ac-a5fc-c8ca9b40b9d4">
                        <Slot name="$XDSDocumentEntryEntryUUID">
                            <ValueList>
                                <Value>('$id0$')</Value>
                            </ValueList>
                        </Slot>
                    </AdhocQuery>
                </query:AdhocQueryRequest>
            </Metadata>
            <ExpectedContents>
                <Associations count="0"/>
                <Documents count="1"/>
                <Folders count="0"/>
                <SubmissionSets count="0"/>
            </ExpectedContents>
        </StoredQueryTransaction>
    </TestStep>
</TestPlan>
