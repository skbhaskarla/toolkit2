      <Assertion>Accept Create Folder with Initial Document</Assertion>
    </Rule>
    <RegisterTransaction>
      <XDSb/>
      <AssignUuids/>
      <MetadataFile>single_doc_w_fol.xml</MetadataFile>
    </RegisterTransaction>
  </TestStep>
  <TestStep id="verify_submission">
    <Rule>
      <Transaction>SQ</Transaction>
      <SQ>GetSubmissionSetAndContents</SQ>
      <Assertion>Query based on uniqueId</Assertion>
    </Rule>
    <ExpectedStatus>Success</ExpectedStatus>
    <StoredQueryTransaction>
      <XDSb/>
      <Metadata>
        <query:AdhocQueryRequest xmlns:query="urn:oasis:names:tc:ebxml-regrep:xsd:query:3.0">
          <query:ResponseOption returnComposedObjects="true" returnType="LeafClass"/>
          <tag0:AdhocQuery xmlns:tag0="urn:oasis:names:tc:ebxml-regrep:xsd:rim:3.0" id="urn:uuid:e8e3cb2c-e39c-46b9-99e4-c12f57260b83">
            <tag0:Slot name="$XDSSubmissionSetUniqueId">
              <tag0:ValueList>
                <tag0:Value>'$uniqueid$'</tag0:Value>
              </tag0:ValueList>
            </tag0:Slot>
          </tag0:AdhocQuery>
        </query:AdhocQueryRequest>
      </Metadata>
      <UseId id="SubmissionSet01" symbol="$uniqueid$" step="submit_doc_w_fol" section="AssignedUids"/>
      <ExpectedContents>
        <SubmissionSets count="1"/>
        <Associations count="4"/>
        <Documents count="1"/>
        <Folders count="1"/>
        <SSwithOneDocOneFol/>
      </ExpectedContents>
    </StoredQueryTransaction>
  </TestStep>
  <TestStep id="rplc">
    <ExpectedStatus>Success</ExpectedStatus>
    <Rule>
      <Transaction>R</Transaction>
      <Assertion>Issue RPLC</Assertion>
    </Rule>
    <RegisterTransaction>
      <XDSb/>
      <UseId id="Document01" symbol="$rplc_doc_uuid$" step="submit_doc_w_fol" section="AssignedUuids"/>
      <MetadataFile>rplc.xml</MetadataFile>
    </RegisterTransaction>
  </TestStep>
  <TestStep id="verify_folder_contents">
    <Rule>
      <Transaction>SQ</Transaction>
      <SQ>GetFolderAndContents</SQ>
      <Assertion>Evaluate association between folder and document</Assertion>
    </Rule>
    <ExpectedStatus>Success</ExpectedStatus>
    <StoredQueryTransaction>
      <XDSb/>
      <Metadata>
        <query:AdhocQueryRequest xmlns:query="urn:oasis:names:tc:ebxml-regrep:xsd:query:3.0">
          <query:ResponseOption returnComposedObjects="true" returnType="LeafClass"/>
          <tag0:AdhocQuery xmlns:tag0="urn:oasis:names:tc:ebxml-regrep:xsd:rim:3.0" id="urn:uuid:b909a503-523d-4517-8acf-8e5834dfc4c7">
