                                <version>1.5</version>
                            </dependency>
                        </dependencies>
                        <executions>
                            <execution>
                                <id>attach-site</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-war-plugin</artifactId>
                        <configuration>
                            <webResources>
                                <webResource>
                                    <!-- this is relative to the pom.xml directory -->
                                    <directory>${project.build.directory}/site</directory>
                                    <targetPath>site</targetPath>
                                </webResource>
                            </webResources>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
